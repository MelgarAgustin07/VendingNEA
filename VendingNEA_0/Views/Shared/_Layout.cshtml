@functions {
    string IsActive(string controller, string action = null)
    {
        var currentController = Context.Request.RouteValues["controller"]?.ToString();
        var currentAction = Context.Request.RouteValues["action"]?.ToString();

        if (currentController == controller &&
           (action == null || currentAction == action))
            return "active";

        return "";
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VendingNEA_0</title>

    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VendingNEA_0.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
        body {
            overflow-x: hidden;
        }

        #sidebar {
            min-height: 100vh;
            transition: margin-left 0.3s;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
        }

        #sidebar.collapsed {
            margin-left: -380px;
        }

        #content {
            width: 100%;
            margin-left: 380px;
            transition: margin-left 0.3s;
        }

        #content.expanded {
            margin-left: 0;
        }

        .nav-link.active {
            background-color: #0d6efd !important;
            color: white !important;
        }
    </style>
</head>

<body>
    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="d-flex flex-column flex-shrink-0 p-3 text-bg-dark" id="sidebar" style="width: 380px;">
            <a asp-controller="Home" asp-action="Index"
               class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                <i class="bi bi-shop fs-4 me-2"></i>
                <span class="fs-4">VendingNEA</span>
            </a>
            <hr>

            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a asp-controller="Maquinas" asp-action="Index"
                       class="nav-link text-white @IsActive("Maquinas", "Index")">
                        <i class="bi bi-box-seam me-2"></i>
                        Gestión de Máquinas Expendedoras
                    </a>
                </li>

                <li>
                    <a asp-controller="Personal" asp-action="Index"
                       class="nav-link text-white @IsActive("Personal", "Index")">
                        <i class="bi bi-person-badge me-2"></i>
                        Gestión del Personal
                    </a>
                </li>

                <li>
                    <a class="nav-link text-white">
                        <i class="bi bi-building me-2"></i>
                        Gestión de Acuerdos Comerciales
                    </a>
                </li>

                <li>
                    <a asp-controller="MantenimientoTecnico" asp-action="Index"  
                        class="nav-link text-white">
                        <i class="bi bi-tools me-2"></i>
                        Mantenimiento Técnico
                    </a>
                </li>

                <li>
                    <a class="nav-link text-white">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Registro de Incidentes
                    </a>
                </li>

                <li>
                    <a class="nav-link text-white">
                        <i class="bi bi-cart-check me-2"></i>
                        Consulta de Ventas
                    </a>
                </li>

                <li>
                    <a class="nav-link text-white">
                        <i class="bi bi-map me-2"></i>
                        Gestión de Rutas y Visitas
                    </a>
                </li>

            </ul>
        </div>

        <!-- Page Content -->
        <div id="content">

            <!-- Top Nav -->
            <div class="container-fluid mt-3">
                <button class="btn btn-dark" id="sidebarToggle">
                    <i class="bi bi-list"></i>
                </button>
            </div>

            <!-- Main Content -->
            <div class="container-fluid p-4">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>

            <!-- Footer -->
            <footer class="border-top footer text-muted mt-auto">
                <div class="container-fluid p-3">
                    &copy; 2025 - VendingNEA_0
                </div>
            </footer>

        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        document.getElementById("sidebarToggle").addEventListener("click", function (e) {
            e.preventDefault();
            var sidebar = document.getElementById("sidebar");
            var content = document.getElementById("content");

            sidebar.classList.toggle("collapsed");
            content.classList.toggle("expanded");
        });

        function handleResponsive() {
            var sidebar = document.getElementById("sidebar");
            var content = document.getElementById("content");
            var w = window.innerWidth;

            if (w <= 768) {
                sidebar.classList.add("collapsed");
                content.classList.add("expanded");
            } else {
                sidebar.classList.remove("collapsed");
                content.classList.remove("expanded");
            }
        }

        handleResponsive();
        window.addEventListener("resize", handleResponsive);
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
