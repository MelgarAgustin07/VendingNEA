@model VendingNEA_0.Models.Condicion

@{
    ViewData["Title"] = "Crear Condición";
    var numAcuerdo = ViewBag.NumAcuerdo;   // viene desde Acuerdos/Details
}

<h1>Crear Condición</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <!-- acuerdo al que pertenece -->
            <input type="hidden" name="NumAcuerdo" value="@numAcuerdo" />

            <div class="alert alert-info">
                Esta condición se asociará al acuerdo N° <strong>@numAcuerdo</strong>.
            </div>

            <!-- resumen de errores -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Tipo de condición -->
            <div class="form-group">
                <label>Tipo de condición</label>
                <select id="TipoCondicion" name="TipoCondicion" class="form-control">
                    <option value="">Seleccione...</option>
                    <option value="comision">Porcentaje (Comisión)</option>
                    <option value="monto">Monto Fijo</option>
                </select>
            </div>

            <!-- Porcentaje -->
            <div class="form-group mt-3" id="divPorcentaje" style="display:none;">
                <label>Porcentaje (%)</label>
                <input type="number"
                       name="Porcentaje"
                       step="1"
                       min="0"
                       max="100"
                       class="form-control" />
            </div>

            <!-- Monto -->
            <div class="form-group mt-3" id="divMonto" style="display:none;">
                <label>Monto ($)</label>
                <input type="number"
                       name="Monto"
                       step="0.01"
                       min="0"
                       class="form-control" />
            </div>

            <div class="mt-4">
                <input type="submit" value="Guardar condición" class="btn btn-primary" />
                <a asp-controller="Acuerdos"
                   asp-action="Details"
                   asp-route-id="@numAcuerdo"
                   class="btn btn-secondary ms-2">
                    Volver al acuerdo
                </a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <script>
        const sel = document.getElementById("TipoCondicion");
        const divP = document.getElementById("divPorcentaje");
        const divM = document.getElementById("divMonto");

        sel.addEventListener("change", function () {
            if (this.value === "comision") {
                divP.style.display = "block";
                divM.style.display = "none";
            } else if (this.value === "monto") {
                divP.style.display = "none";
                divM.style.display = "block";
            } else {
                divP.style.display = "none";
                divM.style.display = "none";
            }
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
