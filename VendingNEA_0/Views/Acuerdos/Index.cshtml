@model IEnumerable<VendingNEA_0.Models.Acuerdo>

@{
    ViewData["Title"] = "Gestión de Acuerdos Comerciales";

    var ordenActual = ViewData["OrdenActual"] as string ?? "";
    var estadoActual = ViewData["EstadoActual"] as string ?? "";
    DateTime hoy = DateTime.Today;
}

<h1 class="text-center mt-4">Gestión de Acuerdos Comerciales</h1>
<hr />

<!-- Leyenda de colores -->
<div class="mb-3">
    <strong>Leyenda vigencia:</strong>
    <span class="badge" style="background-color:#d4edda; color:#155724;">Más de 6 meses</span>
    <span class="badge" style="background-color:#fff3cd; color:#856404;">Entre 1 y 6 meses</span>
    <span class="badge" style="background-color:#f8d7da; color:#721c24;">Menos de 1 mes</span>
    <span class="badge bg-secondary">Vencido</span>
</div>

<!-- Filtros -->
<form method="get" class="row g-3 mb-3 align-items-end">

    <div class="col-md-4">
        <label class="form-label">Ordenar por</label>
        <select name="orden" class="form-select">
            <option value="" selected="@(string.IsNullOrEmpty(ordenActual))">
                Nº de acuerdo
            </option>
            <option value="fechaAsc" selected="@(ordenActual == "fechaAsc")">
                Fecha fin (más cercanas primero)
            </option>
            <option value="fechaDesc" selected="@(ordenActual == "fechaDesc")">
                Fecha fin (más lejanas primero)
            </option>
            <option value="estabAsc" selected="@(ordenActual == "estabAsc")">
                Establecimiento (A-Z)
            </option>
            <option value="estabDesc" selected="@(ordenActual == "estabDesc")">
                Establecimiento (Z-A)
            </option>
        </select>
    </div>

    <div class="col-md-4">
        <label class="form-label">Estado de vigencia</label>
        <select name="estado" class="form-select">
            <option value="" selected="@(string.IsNullOrEmpty(estadoActual))">
                Todos
            </option>
            <option value="vigentes" selected="@(estadoActual == "vigentes")">
                Solo vigentes
            </option>
            <option value="porVencer" selected="@(estadoActual == "porVencer")">
                Próximos a vencer (≤ 1 mes)
            </option>
            <option value="vencidos" selected="@(estadoActual == "vencidos")">
                Vencidos
            </option>
        </select>
    </div>

    <!-- Botones -->
    <div class="col-md-4 d-flex align-items-end">
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-search me-2"></i>Filtrar
            </button>

            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-brush me-2"></i>Limpiar
            </a>
        </div>

        <div class="ms-auto">
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle me-2"></i>Dar de Alta
            </a>
        </div>
    </div>

</form>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>N° Acuerdo</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Establecimiento</th>
            <th>Máquina</th>
            <th>Días restantes</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            double? diasRestantes = null;
            if (item.FechaFinalizacion.HasValue)
            {
                diasRestantes = (item.FechaFinalizacion.Value.Date - hoy).TotalDays;
            }

            string claseFila;

            if (!item.FechaFinalizacion.HasValue)
            {
                claseFila = "";
            }
            else if (item.FechaFinalizacion.Value.Date < hoy)
            {
                claseFila = "table-secondary";          // vencido
            }
            else if (diasRestantes <= 30)
            {
                claseFila = "table-danger";             // < 1 mes
            }
            else if (diasRestantes <= 180)
            {
                claseFila = "table-warning";            // 1–6 meses
            }
            else
            {
                claseFila = "table-success";            // > 6 meses
            }

            <tr class="@claseFila">
                <td>@item.NumAcuerdo</td>
                <td>@item.FechaInicio?.ToShortDateString()</td>
                <td>@item.FechaFinalizacion?.ToShortDateString()</td>
                <td>@item.CuitNavigation?.NombreComercial</td>
                <td>@item.NumSerieNavigation?.NumSerie</td>
                <td>
                    @if (diasRestantes == null)
                    {
                        @:-
                    }
                    else if (diasRestantes < 0)
                    {
                        @:Vencido
                    }
                    else
                    {
                        @($"{Math.Floor(diasRestantes.Value)} días")
                    }
                </td>
                <td>
                    <a asp-action="Details"
                       asp-route-id="@item.NumAcuerdo"
                       class="btn btn-primary m-1">
                        <i class="bi bi-clipboard-check me-2"></i>Ver Acuerdo
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
