@model VendingNEA_0.Models.Acuerdo

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Acuerdo</h1>

<h4>Acuerdo</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* Fechas *@
            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input asp-for="FechaInicio" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaFinalizacion" class="control-label"></label>
                <input asp-for="FechaFinalizacion" class="form-control" />
                <span asp-validation-for="FechaFinalizacion" class="text-danger"></span>
            </div>

            @* Máquina *@
            <div class="form-group">
                <label asp-for="NumSerie" class="control-label"></label>

                @if (ViewData["IsFixedMachine"] != null && (bool)ViewData["IsFixedMachine"])
                {
                    <select asp-for="NumSerie" class="form-control" asp-items="ViewBag.NumSerie" disabled></select>
                    <input type="hidden" asp-for="NumSerie" />
                }
                else
                {
                    <select asp-for="NumSerie" class="form-control" asp-items="ViewBag.NumSerie"></select>
                }
            </div>

            @* Establecimiento *@
            <div class="form-group">
                <label asp-for="Cuit" class="control-label"></label>
                <select asp-for="Cuit" class="form-control" asp-items="ViewBag.Cuit"></select>
            </div>

            <hr />
            <h5>Condición comercial</h5>

            @* Tipo de condición *@
            <div class="form-group">
                <label>Tipo de condición</label>
                <select name="TipoCondicion" id="TipoCondicion" class="form-control">
                    <option value="">Seleccione...</option>
                    <option value="comision">Porcentaje (comisión)</option>
                    <option value="monto">Monto fijo</option>
                </select>
            </div>

            @* Porcentaje *@
            <div class="form-group mt-2" id="divPorcentaje" style="display:none;">
                <label>Porcentaje (%)</label>
                <input type="number"
                       name="Porcentaje"
                       class="form-control"
                       step="1"
                       min="0"
                       max="100" />
            </div>

            @* Monto *@
            <div class="form-group mt-2" id="divMonto" style="display:none;">
                <label>Monto ($)</label>
                <input type="number"
                       name="Monto"
                       class="form-control"
                       step="0.01"
                       min="0" />
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        const sel = document.getElementById("TipoCondicion");
        const divP = document.getElementById("divPorcentaje");
        const divM = document.getElementById("divMonto");

        sel.addEventListener("change", function () {
            if (this.value === "comision") {
                divP.style.display = "block";
                divM.style.display = "none";
            } else if (this.value === "monto") {
                divP.style.display = "none";
                divM.style.display = "block";
            } else {
                divP.style.display = "none";
                divM.style.display = "none";
            }
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
