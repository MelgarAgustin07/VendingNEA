@model VendingNEA_0.Models.Acuerdo

@{
    ViewData["Title"] = "Crear Acuerdo";
}

<h1 class="text-center mt-4">Crear Acuerdo</h1>
<hr />

<div class="d-flex justify-content-center mb-4">
    <a class="btn btn-secondary" asp-action="Index">
        <i class="bi bi-arrow-left me-2"></i> Volver al Listado
    </a>
</div>

<div class="d-flex justify-content-center">
    <div class="card col-12 col-md-8 col-lg-6">
        <div class="card-body">

            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row g-3">

                    <!-- Fecha Inicio -->
                    <div class="col-md-6">
                        <label asp-for="FechaInicio" class="form-label fw-bold"></label>
                        <input asp-for="FechaInicio" type="date" class="form-control" required />
                        <span asp-validation-for="FechaInicio" class="text-danger"></span>
                    </div>

                    <!-- Fecha Finalización -->
                    <div class="col-md-6">
                        <label asp-for="FechaFinalizacion" class="form-label fw-bold"></label>
                        <input asp-for="FechaFinalizacion" type="date" class="form-control" required />
                        <span asp-validation-for="FechaFinalizacion" class="text-danger"></span>
                    </div>

                    <!-- Máquina -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Máquina</label>
                        @if (ViewData["IsFixedMachine"] != null && (bool)ViewData["IsFixedMachine"])
                        {
                            <select asp-for="NumSerie" class="form-select" asp-items="ViewBag.NumSerie" disabled></select>
                            <input type="hidden" asp-for="NumSerie" />
                        }
                        else
                        {
                            <select asp-for="NumSerie" class="form-select" asp-items="ViewBag.NumSerie"></select>
                        }
                        <span asp-validation-for="NumSerie" class="text-danger"></span>
                    </div>

                    <!-- Establecimiento -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Establecimiento</label>
                        <select asp-for="Cuit" class="form-select" asp-items="ViewBag.Cuit"></select>
                        <span asp-validation-for="Cuit" class="text-danger"></span>
                    </div>

                </div>

                <hr class="mt-4" />
                <h5 class="fw-bold">Condición comercial</h5>

                <div class="row g-3 mt-1">

                    <!-- Tipo de Condición -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Tipo de condición</label>
                        <select name="TipoCondicion" id="TipoCondicion" class="form-select" required>
                            <option value="">Seleccione...</option>
                            <option value="comision">Porcentaje (comisión)</option>
                            <option value="monto">Monto fijo</option>
                        </select>
                    </div>

                    <!-- Porcentaje -->
                    <div class="col-md-6" id="divPorcentaje" style="display:none;">
                        <label class="form-label fw-bold">Porcentaje (%)</label>
                        <input type="number" name="Porcentaje" class="form-control"
                               min="0" max="100" step="1" />
                    </div>

                    <!-- Monto -->
                    <div class="col-md-6" id="divMonto" style="display:none;">
                        <label class="form-label fw-bold">Monto ($)</label>
                        <input type="number" name="Monto" class="form-control"
                               min="0" step="0.01" />
                    </div>

                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-plus-circle me-2"></i> Crear Acuerdo
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        const sel = document.getElementById("TipoCondicion");
        const divP = document.getElementById("divPorcentaje");
        const divM = document.getElementById("divMonto");

        sel.addEventListener("change", function () {

            divP.style.display = "none";
            divM.style.display = "none";

            if (this.value === "comision") {
                divP.style.display = "block";
            }

            if (this.value === "monto") {
                divM.style.display = "block";
            }
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
