@model VendingNEA_0.Models.Acuerdo

@{
    ViewData["Title"] = "Detalles del acuerdo";
}

<h1 class="text-center mt-4">Detalles del Acuerdo N° @Model.NumAcuerdo</h1>
<hr />

<div class="d-flex justify-content-center mb-4">
    <a class="btn btn-secondary" asp-action="Index">
        <i class="bi bi-arrow-left me-2"></i>Volver al listado
    </a>
</div>

<div class="row">

    <!-- CARD INFORMACIÓN GENERAL -->
    <div class="col-md-6 mb-4">
        <div class="card h-100">

            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Información General</h4>
            </div>

            <div class="card-body">

                <p><strong>N° Acuerdo:</strong> @Model.NumAcuerdo</p>
                <p><strong>Fecha inicio:</strong> @Model.FechaInicio?.ToShortDateString()</p>
                <p><strong>Fecha finalización:</strong> @Model.FechaFinalizacion?.ToShortDateString()</p>

                <hr />

                <p>
                    <strong>Establecimiento:</strong><br />
                    @Model.CuitNavigation?.NombreComercial <br />
                    <small class="text-muted">CUIT: @Model.CuitNavigation?.Cuit</small><br />
                    <small class="text-muted">@Model.CuitNavigation?.Direccion</small>
                </p>

                <p class="mt-3">
                    <strong>Máquina:</strong><br />
                    N° @Model.NumSerieNavigation?.NumSerie — @Model.NumSerieNavigation?.Descripcion
                    <br />
                    <small class="text-muted">
                        Marca: @Model.NumSerieNavigation?.Marca
                    </small>
                </p>

            </div>
        </div>
    </div>

    <!-- CARD CONDICIONES COMERCIALES -->
    <div class="col-md-6 mb-4">
        <div class="card h-100">

            <div class="card-header bg-secondary text-white">
                <h4 class="mb-0">Condiciones Comerciales</h4>
            </div>

            <div class="card-body">

                @if (Model.CodCondicions != null && Model.CodCondicions.Any())
                {
                    <ul class="list-group mb-3">
                        @foreach (var cond in Model.CodCondicions)
                        {
                            <li class="list-group-item">

                                @* Comisión porcentual *@
                                @if (cond.CondicionComision != null)
                                {
                                    <div>
                                        <strong>Tipo:</strong> Comisión porcentual<br />
                                        <strong>Porcentaje:</strong> @cond.CondicionComision.Porcentaje %
                                    </div>
                                }
                                @* Monto fijo *@
                                else if (cond.CondicionMonto != null)
                                {
                                    <div>
                                        <strong>Tipo:</strong> Comisión por monto fijo<br />
                                        <strong>Monto:</strong> @string.Format("AR$ {0:N2}", cond.CondicionMonto.Monto)
                                    </div>
                                }
                                @* Otros tipos (solo nombre) *@
                                else
                                {
                                    <div>
                                        <strong>Tipo:</strong> @cond.Nombre
                                    </div>
                                }

                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">No hay condiciones cargadas para este acuerdo.</p>
                }

                <div class="mt-3">
                    <a asp-controller="Condicions"
                       asp-action="Create"
                       asp-route-numAcuerdo="@Model.NumAcuerdo"
                       class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>Agregar condición
                    </a>
                </div>

            </div>
        </div>
    </div>

</div>
