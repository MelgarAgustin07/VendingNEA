@model IEnumerable<VendingNEA_0.Models.Maquina>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Descripción</th>
            <th>Marca</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                <td>@item.Descripcion</td>
                <td>@item.Marca</td>
                <td>
                <a asp-action="Edit" asp-route-id="@item.NumSerie">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NumSerie">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NumSerie">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
