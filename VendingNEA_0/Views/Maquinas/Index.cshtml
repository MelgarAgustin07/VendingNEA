@model IEnumerable<VendingNEA_0.Models.Maquina>

@{
    ViewData["Title"] = "Gestión de Máquinas Expendedoras";
}

<h1 class="text-center mt-4">Gestión de Máquinas Expendedoras</h1>
<hr/>

<!-- Filtros -->
<form method="get" class="row g-3 mb-3 align-items-end">
    <div class="col-md-3">
        <label for="estadoFiltro" class="form-label">Estado Operativo</label>
        <select class="form-select" id="estadoFiltro" name="estadoFiltro" asp-items="ViewBag.EstadoList">
        </select>
    </div>
    <div class="col-md-3">
        <label for="ubicacionFiltro" class="form-label">Ubicación</label>
        <input type="text" class="form-control" id="ubicacionFiltro" name="ubicacionFiltro" value="@(ViewBag.UbicacionFiltro ?? "")" placeholder="Ingrese ubicación">
    </div>
    <div class="col-md-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-search me-2"></i>Filtrar
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-brush me-2"></i>Limpiar
        </a>
    </div>
    <div class="col-md-3 text-end">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-2"></i> Dar de Alta
        </a>
    </div>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>N° de Serie</th>
            <th>Descripción</th>
            <th>Marca</th>
            <th>Estado Operativo</th>
            <th>Ubicación</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.NumSerie</td>
            <td>@item.Descripcion</td>
            <td>@item.Marca</td>
            <td>
                @if (item.EstadoOperativo.GetValueOrDefault())
                {
                    <span class="badge rounded-pill bg-success">Operando</span>
                }
                else
                {
                    <span class="badge rounded-pill bg-danger">Fuera de servicio</span>
                }
            </td>
            <td>@item.Ubicacion</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.NumSerie" class="btn btn-primary m-1"><i class="bi bi-info-circle me-2"></i>Detalles</a>
                <a asp-action="Edit" asp-route-id="@item.NumSerie" class="btn btn-warning m-1"><i class="bi bi-pencil-square me-2"></i>Editar</a>   
                <button type="button"
                        class="btn btn-danger m-1"
                            onclick="confirmarEliminacion(@item.NumSerie, '@item.Descripcion', '@item.Marca', '@(item.EstadoOperativo == true ? "Operando" : "Fuera de Servicio")','@item.Acuerdos.Any(a => a.FechaFinalizacion >= DateTime.Now).ToString().ToLower()')">
                    <i class="bi bi-trash me-2"></i>Eliminar
                </button>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function confirmarEliminacion(numSerie, descripcion, marca, estado, tieneAcuerdo) {

            let advertenciaAcuerdo = "";
            if (tieneAcuerdo === true || tieneAcuerdo === "true") {
                advertenciaAcuerdo = `
                    <br>
                    <span class="text-danger fw-bold">
                        ⚠ Esta máquina tiene un acuerdo comercial vigente.<br>
                        Al eliminarla, el acuerdo será cancelado inmediatamente.
                    </span>
                `;
            }

            Swal.fire({
                title: "¿Eliminar Máquina?",
                html: `
                    <div class="text-center">
                        <strong>N° Serie:</strong> ${numSerie}<br>
                        <strong>Descripción:</strong> ${descripcion}<br>
                        <strong>Marca:</strong> ${marca}<br>
                        <span class="text-danger fw-bold">⚠ Los cambios son irreversibles.</span>
                        ${advertenciaAcuerdo}
                    </div>
                `,
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: "Eliminar definitivamente",
                cancelButtonText: "Cancelar",
                confirmButtonColor: "#d33",
                cancelButtonColor: "#6c757d",
            }).then((result) => {
                if (result.isConfirmed) {
                    eliminarMaquina(numSerie);
                }
            });
        }

        function eliminarMaquina(numSerie) {
            fetch(`/Maquinas/Delete/${numSerie}`, {
                method: "POST"
            })
            .then(response => {
                if (response.ok) {
                    Swal.fire({
                        title: "Eliminada",
                        text: "La máquina fue eliminada exitosamente",
                        icon: "success"
                    }).then(() => location.reload());
                } else {
                    Swal.fire("Error", "No se pudo eliminar la máquina", "error");
                }
            });
        }
    </script>
}
