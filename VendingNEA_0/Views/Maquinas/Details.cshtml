@model VendingNEA_0.Models.Maquina

@{
    ViewData["Title"] = "Detalle de Máquina Expendedora";
}

<h1 class="text-center mt-4">@Model.Descripcion</h1>
<hr />

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<div class="d-flex justify-content-center gap-3 mb-4">
    <a class="btn btn-secondary" asp-action="Index">
        <i class="bi bi-arrow-left me-2"></i> Volver al Listado
    </a>

    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.NumSerie">
        <i class="bi bi-pencil-square me-2"></i>Editar Máquina
    </a>

    @if (ViewBag.AcuerdoVigente == null)
    {
        <a class="btn btn-success"
           asp-controller="Acuerdos"
           asp-action="Create"
           asp-route-numSerie="@Model.NumSerie">
            Asignar Acuerdo
        </a>
    }
</div>

<div class="row">
    <!-- CARD INFORMACIÓN GENERAL -->
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Información General</h4>
            </div>

            <div class="card-body">
                <p><strong>N° de Serie</strong> @Model.NumSerie</p>
                <p><strong>Ubicación:</strong> @Model.Ubicacion</p>
                <p><strong>Descripción:</strong> @Model.Descripcion</p>
                <p><strong>Marca:</strong> @Model.Marca</p>

                <p>
                    <strong>Tipo:</strong>

                    @if (Model.MaquinaDebito != null)
                    {
                        <span class="badge text-bg-primary"><i class="bi bi-credit-card me-2"></i>Débito</span>
                    }
                    else if (Model.MaquinaEfectivo != null)
                    {
                        <span class="badge text-bg-primary"><i class="bi bi-cash-coin me-2"></i>Efectivo</span>
                    }
                    else
                    {
                        <span class="badge text-bg-secondary">No especificado</span>
                    }
                </p>

                <p>
                    <strong>Estado Operativo:</strong>
                    @if (Model.EstadoOperativo.GetValueOrDefault())
                    {
                        <span class="badge rounded-pill bg-success">Operando</span>
                    }
                    else
                    {
                        <span class="badge rounded-pill bg-danger">Fuera de servicio</span>
                    }
                </p>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-header bg-secondary text-white">
                <h4 class="mb-0">Acuerdo vigente</h4>
            </div>

            <div class="card-body">
                @if (ViewBag.AcuerdoVigente != null)
                {
                    <!-- Fechas del acuerdo -->
                    <p><strong>Fecha inicio:</strong> @ViewBag.AcuerdoVigente.FechaInicio.ToShortDateString()</p>
                    <p><strong>Fecha fin:</strong> @ViewBag.AcuerdoVigente.FechaFinalizacion.ToShortDateString()</p>

                    <hr />

                    <!-- Datos del establecimiento -->
                    <p><strong>CUIT:</strong> @ViewBag.AcuerdoVigente.CuitNavigation.Cuit</p>
                    <p><strong>Establecimiento:</strong> @ViewBag.AcuerdoVigente.CuitNavigation.NombreComercial</p>
                    <p><strong>Dirección:</strong> @ViewBag.AcuerdoVigente.CuitNavigation.Direccion</p>
                }
                else
                {
                    <p class="text-muted">No tiene un acuerdo vigente.</p>
                }
            </div>
        </div>
    </div>
</div>
