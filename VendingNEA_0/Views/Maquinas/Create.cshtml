@model VendingNEA_0.Models.Maquina

@{
    ViewData["Title"] = "Crear Máquina Expendedora";
}

<h1 class="text-center mt-4">Alta de Máquina Expendedora</h1>
<hr />

<div class="d-flex justify-content-center mb-4">
    <a class="btn btn-secondary" asp-action="Index">
        <i class="bi bi-arrow-left me-2"></i> Volver al Listado
    </a>
</div>

<div class="d-flex justify-content-center">
    <div class="card col-12 col-md-8 col-lg-6">

        <div class="card-body">

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row g-3">

                    <!-- Ubicación -->
                    <div class="col-md-6">
                        <label asp-for="Ubicacion" class="form-label fw-bold"></label>
                        <input asp-for="Ubicacion" class="form-control" />
                        <span asp-validation-for="Ubicacion" class="text-danger"></span>
                    </div>

                    <!-- Descripción -->
                    <div class="col-md-6">
                        <label asp-for="Descripcion" class="form-label fw-bold"></label>
                        <input asp-for="Descripcion" class="form-control" />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>

                    <!-- Estado Operativo -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Estado Operativo</label>

                        <div class="form-check">
                            <input class="form-check-input"
                                   type="radio"
                                   asp-for="EstadoOperativo"
                                   value="true" />
                            <label class="form-check-label">Operando</label>
                        </div>

                        <div class="form-check">
                            <input class="form-check-input"
                                   type="radio"
                                   asp-for="EstadoOperativo"
                                   value="false" />
                            <label class="form-check-label">Fuera de Servicio</label>
                        </div>

                        <span asp-validation-for="EstadoOperativo" class="text-danger"></span>
                    </div>

                    <!-- Marca -->
                    <div class="col-md-6">
                        <label asp-for="Marca" class="form-label fw-bold"></label>
                        <input asp-for="Marca" class="form-control" />
                        <span asp-validation-for="Marca" class="text-danger"></span>
                    </div>

                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-plus-circle me-2"></i> Crear Máquina
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
