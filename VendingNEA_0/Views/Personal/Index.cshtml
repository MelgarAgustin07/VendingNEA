@model IEnumerable<VendingNEA_0.Models.Empleado>

@{
    ViewData["Title"] = "Gestión de Personal";
}

<h1 class="text-center mt-4">Gestión de Personal</h1>
<hr/>

<div class="d-flex justify-content-end mb-3 mt-3">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Registrar Empleado
    </a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th style="background-color: #f3f3f3">N° de Legajo</th>
            <th style="background-color: #f3f3f3">DNI</th>
            <th style="background-color: #f3f3f3">Nombre Completo</th>
            <th style="background-color: #f3f3f3">Direccion</th>
            <th style="background-color: #f3f3f3">Email</th>
            <th style="background-color: #f3f3f3">Fecha de Ingreso</th>
            <th style="background-color: #f3f3f3">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Legajo</td>
                <td>@item.Dni</td>
                <td>@item.Nombre @item.Apellido</td>
                <td>@item.Direccion</td>
                <td>@item.Email</td>
                <td>@item.FechaIngreso?.ToString("dd/MM/yyyy")</td>
                
                <td>
                    <a asp-action="Tasks" asp-route-legajo="@item.Legajo" class="btn btn-primary"><i class="bi bi-clipboard-check me-2"></i>Ver Tareas</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<h2 class="mt-4 mb-4 text-center">Historial de Tareas del Personal</h2>

<form method="get" class="row g-3 mb-3 align-items-end">
    <div class="col-md-3">
        <label for="fechaDesde" class="form-label">Fecha Desde</label>
        <input type="date" class="form-control" name="fechaDesde" id="fechaDesde"
               value="@ViewBag.FechaDesde" />
    </div>

    <div class="col-md-3">
        <label for="fechaHasta" class="form-label">Fecha Hasta</label>
        <input type="date" class="form-control" name="fechaHasta" id="fechaHasta"
               value="@ViewBag.FechaHasta" />
    </div>

    <div class="col-md-3">
        <label for="tipoTarea" class="form-label">Tipo de Tarea</label>
        <select class="form-select" name="tipoTarea" id="tipoTarea">
            <option value="Todos" selected="@(ViewBag.TipoTarea == "Todos")">Todos</option>
            <option value="Visita" selected="@(ViewBag.TipoTarea == "Visita")">Visitas</option>
            <option value="Ruta" selected="@(ViewBag.TipoTarea == "Ruta")">Rutas</option>
            <option value="Mantenimiento" selected="@(ViewBag.TipoTarea == "Mantenimiento")">Mantenimientos</option>
        </select>
    </div>

    <div class="col-md-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-search me-2"></i>Filtrar
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-brush me-2"></i>Limpiar
        </a>
    </div>
</form>

<table class="table table-striped table-bordered mt-3">
    <thead>
        <tr>
            <th style="background-color: #f3f3f3;">Fecha</th>
            <th style="background-color: #f3f3f3;">Empleado</th>
            <th style="background-color: #f3f3f3;">Tipo</th>
            <th style="background-color: #f3f3f3;">Descripción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in (IEnumerable<dynamic>)ViewBag.Historial)
        {
            <tr>
                <td>@(((DateTime)t.Fecha).ToString("dd/MM/yyyy"))</td>
                <td>@t.Empleado</td>
                <td>@t.Tipo</td>
                <td>@t.Descripcion</td>
            </tr>
        }
    </tbody>
</table>
